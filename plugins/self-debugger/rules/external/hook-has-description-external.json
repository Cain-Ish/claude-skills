{
  "rule_id": "hook-has-description-external",
  "version": "1.0.0",
  "category": "web-discovered",
  "severity": "warning",
  "confidence": 0.7,
  "applies_to": {
    "component": "hooks",
    "pattern": ".*\\.md$"
  },
  "validation": {
    "type": "static",
    "checks": [
      {
        "check_id": "has-description-frontmatter",
        "type": "regex",
        "pattern": "^---[\\s\\S]*description:[\\s\\S]*---",
        "error_message": "Hooks should include description in frontmatter (web-discovered best practice)"
      }
    ]
  },
  "fix_template": {
    "type": "manual",
    "content": "Add 'description: Hook purpose here' to YAML frontmatter"
  },
  "references": [
    "https://docs.anthropic.com/claude-code/plugins/hooks"
  ],
  "learned_from": "web_search",
