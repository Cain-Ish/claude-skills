{
  "rule_id": "plugin-schema-valid",
  "version": "1.0.0",
  "category": "plugin-correctness",
  "severity": "error",
  "confidence": 0.98,
  "applies_to": {
    "component": ".claude-plugin",
    "pattern": "plugin\\.json$"
  },
  "validation": {
    "type": "static",
    "checks": [
      {
        "check_id": "has-required-name",
        "type": "json-field",
        "field": "name",
        "required": true,
        "error_message": "plugin.json must have 'name' field"
      },
      {
        "check_id": "has-required-version",
        "type": "json-field",
        "field": "version",
        "required": true,
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "error_message": "plugin.json must have 'version' field in semver format (e.g., 1.0.0)"
      },
      {
        "check_id": "has-required-description",
        "type": "json-field",
        "field": "description",
        "required": true,
        "error_message": "plugin.json must have 'description' field"
      },
      {
        "check_id": "has-required-author",
        "type": "json-field",
        "field": "author.name",
        "required": true,
        "error_message": "plugin.json must have 'author.name' field"
      },
      {
        "check_id": "has-required-license",
        "type": "json-field",
        "field": "license",
        "required": true,
        "error_message": "plugin.json must have 'license' field"
      }
    ]
  },
  "fix_template": {
    "type": "merge",
    "content": {
      "name": "plugin-name",
      "version": "1.0.0",
      "description": "Plugin description",
      "author": {
        "name": "Author Name"
      },
      "license": "MIT"
    }
  },
  "references": [
    "https://docs.anthropic.com/claude-code/plugins/manifest"
  ],
  "learned_from": "manual",
  "last_updated": "2026-01-23"
}
