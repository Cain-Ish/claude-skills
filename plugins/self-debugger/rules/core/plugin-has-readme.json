{
  "rule_id": "plugin-has-readme",
  "version": "1.0.0",
  "category": "documentation",
  "severity": "warning",
  "confidence": 0.9,
  "applies_to": {
    "pattern": "^\\.$"
  },
  "validation": {
    "type": "static",
    "checks": [
      {
        "check_id": "readme-exists",
        "type": "structure",
        "exists": "README.md",
        "error_message": "Plugin should have README.md file documenting purpose, usage, and configuration"
      }
    ]
  },
  "fix_template": {
    "type": "manual",
    "content": "Create README.md with:\n- Plugin overview\n- Installation instructions\n- Usage examples\n- Configuration options\n- Development status"
  },
  "references": [
    "https://docs.anthropic.com/claude-code/plugins/best-practices",
    "https://github.com/anthropics/claude-code/tree/main/plugins#documentation"
  ],
  "learned_from": "manual",
  "last_updated": "2026-01-23"
}
