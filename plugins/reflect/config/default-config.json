{
  "thresholds": {
    "consecutiveRejections": 3,
    "outcomeTrackingDays": 7,
    "memoryRetentionDays": 90,
    "metricsRetentionDays": 180,
    "feedbackRetentionDays": 30
  },
  "display": {
    "colorEnabled": true,
    "verboseMode": false
  },
  "git": {
    "autoCommit": false,
    "autoPush": false,
    "defaultBranch": "main"
  },
  "signals": {
    "externalFeedbackWeight": 2.0,
    "correctionWeight": 1.5,
    "successWeight": 1.0,
    "edgeCaseWeight": 1.0
  },
  "critic": {
    "enabled": true,
    "strictMode": false,
    "minScoreForApproval": 60
  }
}
