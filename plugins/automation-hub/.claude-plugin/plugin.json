{
  "name": "automation-hub",
  "version": "1.16.0",
  "displayName": "Automation Hub",
  "description": "Self-improving automation orchestrator with cross-plugin optimization, automatic recovery, MAR debate, and adaptive routing",
  "author": "Claude Code Community",
  "license": "MIT",
  "repository": "https://github.com/anthropics/claude-code/plugins/automation-hub",

  "tags": [
    "automation",
    "orchestration",
    "multi-agent",
    "routing",
    "adaptive-learning",
    "workflow",
    "process-management",
    "reflection",
    "self-improvement",
    "developer-productivity"
  ],

  "category": "orchestration",

  "features": [
    "Cross-plugin optimization with correlation analysis (NEW in v1.16.0)",
    "Feedback loop detection across multi-agent ecosystem (NEW in v1.16.0)",
    "LLM-driven optimization proposals (NEW in v1.16.0)",
    "Automatic recovery with exponential backoff and jitter",
    "Circuit breakers preventing cascading failures",
    "Durable execution with hybrid retry + manual redrive",
    "Multi-Agent Reflexion (MAR) debate for reflection quality",
    "Three-type memory system: episodic, semantic, procedural",
    "Adaptive Agent Routing with learning from outcomes (2026 research-backed)",
    "Multi-factor agent selection (success rate, latency, cost, user approval)",
    "Automatic memory consolidation (episodic → semantic/procedural)",
    "Automatic process cleanup with safety checks",
    "Intelligent reflection suggestions based on session signals",
    "Self-healing error detection and auto-fix (opt-in)",
    "Cross-plugin optimization learning",
    "Performance metrics and cost tracking",
    "100% test coverage"
  ],

  "compatibility": {
    "claude_version": ">=1.0.0",
    "platforms": ["darwin", "linux"],
    "shell": "bash"
  },

  "hooks": {
    "PreToolUse": "hooks/PreToolUse.md",
    "Stop": "hooks/Stop.md"
  },

  "commands": {
    "automation": {
      "path": "commands/automation.md",
      "description": "Manage automation features (status, enable, disable, debug, rollback-fixes)",
      "usage": "/automation [status|enable|disable|debug|rollback-fixes]"
    }
  },

  "agents": {
    "learning-coordinator": {
      "path": "agents/learning-coordinator.md",
      "description": "Analyzes cross-plugin metrics and generates optimization proposals",
      "capabilities": [
        "Weekly metrics analysis",
        "Threshold calibration",
        "Performance optimization",
        "Proposal generation"
      ]
    },
    "mar-conservative-critic": {
      "path": "agents/mar-conservative-critic.md",
      "description": "Conservative perspective in MAR debate (risk minimization)",
      "capabilities": [
        "Risk assessment",
        "Evidence evaluation",
        "Stability prioritization",
        "Backward compatibility checks"
      ]
    },
    "mar-aggressive-critic": {
      "path": "agents/mar-aggressive-critic.md",
      "description": "Aggressive perspective in MAR debate (improvement maximization)",
      "capabilities": [
        "Opportunity identification",
        "User friction detection",
        "Improvement suggestions",
        "Urgency assessment"
      ]
    },
    "mar-balanced-critic": {
      "path": "agents/mar-balanced-critic.md",
      "description": "Balanced perspective in MAR debate (pragmatic synthesis)",
      "capabilities": [
        "Cost-benefit analysis",
        "Staged approach design",
        "Trade-off evaluation",
        "Tie-breaking synthesis"
      ]
    },
    "mar-judge": {
      "path": "agents/mar-judge.md",
      "description": "Synthesizes MAR debate critiques into consensus",
      "capabilities": [
        "Multi-perspective synthesis",
        "Consensus formation",
        "Conflict resolution",
        "Action plan generation"
      ]
    }
  },

  "skills": {
    "orchestrate": {
      "path": "skills/orchestrate/SKILL.md",
      "description": "Orchestrate multi-agent workflows with intelligent routing",
      "usage": "/orchestrate"
    }
  },

  "config": {
    "default": "config/default-config.json",
    "schema": {
      "auto_routing": {
        "description": "Intelligent multi-agent task coordination",
        "enabled": true
      },
      "adaptive_routing": {
        "description": "Adaptive agent selection with learning from outcomes (NEW in v1.13.0)",
        "enabled": true
      },
      "auto_cleanup": {
        "description": "Automated process lifecycle management",
        "enabled": true
      },
      "auto_reflect": {
        "description": "Session learning and continuous improvement",
        "enabled": true
      },
      "auto_apply": {
        "description": "Self-healing error detection (opt-in)",
        "enabled": false
      },
      "learning": {
        "description": "System-wide optimization from metrics",
        "enabled": true
      }
    }
  },

  "dependencies": {
    "required": {
      "jq": ">=1.6",
      "git": ">=2.0",
      "bc": ">=1.0"
    },
    "optional_plugins": [
      {
        "name": "multi-agent",
        "description": "Provides task-analyzer agent for complexity analysis",
        "integration": "Used by auto-routing to analyze task complexity and recommend coordination patterns"
      },
      {
        "name": "process-janitor",
        "description": "Process cleanup and lifecycle management",
        "integration": "Called by auto-cleanup to clean orphaned processes with safety checks"
      },
      {
        "name": "reflect",
        "description": "Session reflection and learning",
        "integration": "Triggered by auto-reflect based on session worthiness signals"
      },
      {
        "name": "self-debugger",
        "description": "Error detection and auto-fix",
        "integration": "Integrated with auto-apply for self-healing (opt-in)"
      }
    ]
  },

  "state": {
    "config_path": "~/.claude/automation-hub/config.json",
    "metrics_path": "~/.claude/automation-hub/metrics.jsonl",
    "session_state_path": "~/.claude/automation-hub/session-state.json",
    "proposals_path": "~/.claude/automation-hub/proposals/",
    "adaptive_routing_path": "~/.claude/automation-hub/adaptive-routing/",
    "memory_path": "~/.claude/automation-hub/memory/",
    "mar_debates_path": "~/.claude/automation-hub/mar-debates/"
  },

  "scripts": {
    "core": [
      "scripts/lib/common.sh",
      "scripts/automation-command.sh"
    ],
    "phase1_auto_routing": [
      "scripts/stage1-prefilter.sh",
      "scripts/invoke-task-analyzer.sh",
      "scripts/intelligent-routing.sh",
      "scripts/adaptive-routing-learner.sh",
      "scripts/semantic-router.sh",
      "scripts/agent-registry-manager.sh",
      "scripts/swarm-orchestrator.sh",
      "scripts/team-coordinator.sh",
      "scripts/workflow-planner.sh",
      "scripts/discover-ecosystem.sh"
    ],
    "phase2_auto_cleanup": [
      "scripts/check-cleanup-safe.sh",
      "scripts/automatic-recovery.sh",
      "scripts/circuit-breaker-manager.sh"
    ],
    "phase3_auto_reflection": [
      "scripts/track-session-signals.sh",
      "scripts/calculate-reflection-score.sh",
      "scripts/mar-debate-orchestrator.sh",
      "scripts/three-type-memory.sh"
    ],
    "phase4_auto_debugging": [
      "scripts/auto-apply-fixes.sh",
      "scripts/rollback-fixes.sh",
      "scripts/self-healing-agent.sh"
    ],
    "phase5_learning": [
      "scripts/analyze-metrics.sh",
      "scripts/apply-proposal.sh",
      "scripts/predictive-analytics.sh",
      "scripts/autonomous-orchestration-refiner.sh",
      "scripts/cross-plugin-optimizer.sh"
    ],
    "infrastructure": [
      "scripts/orchestrate-dispatch.sh",
      "scripts/telemetry-exporter.sh",
      "scripts/generate-dashboard.sh",
      "scripts/track-costs.sh",
      "scripts/performance-cache.sh",
      "scripts/streaming-events.sh",
      "scripts/decision-tracer.sh",
      "scripts/context-memory-manager.sh",
      "scripts/security-sandbox.sh",
      "scripts/protocol-bridge.sh",
      "scripts/cross-platform-orchestrator.sh",
      "scripts/opentelemetry-tracer.sh",
      "scripts/agentic-qa-validator.sh",
      "scripts/deployment-automator.sh"
    ]
  },

  "research_foundation": {
