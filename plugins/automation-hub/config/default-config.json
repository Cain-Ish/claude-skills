{
  "version": "1.0",
  "auto_routing": {
    "enabled": true,
    "description": "Automatically invoke multi-agent coordination for complex prompts",
    "stage1_threshold": 4,
    "stage2_auto_approve": {
      "simple": false,
      "moderate": false,
      "complex": false
    },
    "complexity_bands": {
      "simple": {"min": 0, "max": 29},
      "moderate": {"min": 30, "max": 49},
      "complex": {"min": 50, "max": 69},
      "very_complex": {"min": 70, "max": 100}
    },
    "learning_enabled": true,
    "approval_rate_threshold": 0.70,
    "min_samples_for_learning": 10,
    "rate_limit": {
      "max_per_hour": 10,
      "min_interval_minutes": 5
    },
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 3,
      "reset_after_minutes": 60
    }
  },
  "auto_cleanup": {
    "enabled": true,
    "description": "Automatically cleanup orphaned processes when safe",
    "triggers": {
      "user_completion_signals": true,
      "git_commit": true,
      "idle_timeout_minutes": 10,
      "session_end": true
    },
    "safety_blockers": {
      "uncommitted_changes": true,
      "running_dev_processes": true,
      "recent_activity_minutes": 2
    },
    "max_cleanups_per_session": 1,
    "cooldown_minutes": 5,
    "automatic_recovery": {
      "enabled": true,
      "description": "Automatic retry with exponential backoff (2026 research)",
      "max_retries": 3,
      "initial_backoff_ms": 1000,
      "max_backoff_ms": 30000,
      "backoff_multiplier": 2,
      "enable_jitter": true
    },
    "circuit_breaker": {
      "enabled": true,
      "description": "Prevent cascading failures",
      "failure_threshold": 3,
      "half_open_after_seconds": 60,
      "success_threshold": 2
    }
  },
  "auto_reflect": {
    "enabled": true,
    "description": "Suggest reflection based on session worthiness signals",
    "suggest_only": true,
    "auto_execute": false,
    "worthiness_threshold": 20,
    "signal_weights": {
      "corrections": 10,
      "iterations": 5,
      "skill_usage": 8,
      "external_failures": 12,
      "edge_cases": 6,
      "tokens_per_1k": 1
    },
    "max_suggestions_per_session": 1,
    "suggestion_timeout_seconds": 10
  },
  "auto_apply": {
    "enabled": false,
    "description": "Auto-apply low-risk fixes from self-debugger (DISABLED BY DEFAULT)",
    "min_confidence": 0.90,
    "allowed_severities": ["low"],
    "create_checkpoints": true,
    "max_fixes_per_session": 5,
    "require_git_clean": false
  },
  "adaptive_routing": {
    "enabled": true,
    "description": "Adaptive agent selection with learning from outcomes (2026 research-backed)",
    "weights": {
      "success_rate": 0.40,
      "avg_latency": 0.25,
      "cost_efficiency": 0.15,
      "user_approval": 0.20
    },
    "thresholds": {
      "min_confidence": 0.70,
      "complexity_simple": 30,
      "complexity_complex": 60
    },
    "learning": {
      "adaptation_rate": 0.05,
      "min_samples": 20,
      "weekly_weight_optimization": true
    }
  },
  "learning": {
    "enabled": true,
    "description": "Cross-plugin optimization learning system",
    "auto_apply_optimizations": false,
    "analysis_schedule": "weekly",
    "min_confidence_for_proposal": 0.80,
    "cross_plugin_optimization": {
      "enabled": true,
      "description": "Detect patterns and optimize coordination across plugins (2026 research)",
      "min_samples": 10,
      "correlation_threshold": 0.70,
      "feedback_loops_enabled": true
    }
  },
  "mar_debate": {
    "enabled": true,
    "description": "Multi-Agent Reflexion debate for high-quality reflection proposals (2026 research)",
    "min_worthiness_for_debate": 25,
    "personas": {
      "conservative": {
        "enabled": true,
        "weight": 0.30,
        "bias": "risk_minimization",
        "description": "Prioritizes stability, backward compatibility, evidence-based decisions"
      },
      "aggressive": {
        "enabled": true,
        "weight": 0.30,
        "bias": "improvement_maximization",
        "description": "Prioritizes addressing friction, seizing opportunities, bold improvements"
      },
      "balanced": {
        "enabled": true,
        "weight": 0.40,
        "bias": "pragmatic_synthesis",
        "description": "Pragmatic trade-offs, cost-benefit analysis, staged approaches"
      }
    },
    "consensus_threshold": 0.70,
    "max_debate_rounds": 2,
    "fallback_to_single_critic": true
  },
  "three_type_memory": {
    "enabled": true,
    "description": "Episodic, Semantic, Procedural memory system (cognitive science-based)",
    "retention": {
      "episodic_days": 30,
      "semantic_days": 90,
      "procedural_days": 180
    },
    "consolidation": {
      "auto_consolidate": true,
      "consolidation_threshold": 1000,
      "min_pattern_occurrences": 3,
      "schedule": "weekly"
    },
    "retrieval": {
      "default_limit": 10,
      "semantic_weight": 0.5,
      "procedural_weight": 0.3,
      "episodic_weight": 0.2
    }
  },
  "observability": {
    "debug_mode": false,
    "log_metrics": true,
    "log_decisions": true,
    "metrics_retention_days": 90
  }
}
